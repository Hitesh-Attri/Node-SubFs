<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart Page</title>
    <link href="/style/home.css" rel="stylesheet" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
  </head>

  <body>
    <%- include('../views/partials/header', {username:username, loggedIn:loggedIn,isCart:false}); %>

    <main>
      <h3>Cart Page ---=></h3>

      <% let x=products.length %>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2>Product-List</h2>
            <div class="row" id="parDiv">
              <% for(let i=0; i < x; i++){ %>
              <div class="col-md-3">
                <div class="product" style="background: #fff;">
                  <div class="text-center">
                    <img src="<%= products[i].fileName %>" class="img-fluid" />
                  </div>
                  <p><%= products[i].productName %></p>
                  <div class="my-2 text center d-flex" id="<%= products[i].id %>">
                    <a href="/product/details/<%= products[i].id %>" class="btn btn-secondary btn-sm mx-2">View details</a>

                    <button id="<%= products[i].id %>" class="btn btn-secondary btn-sm addToCartBtn mx-2 minus" >-</button>
                    <p id="p<%= products[i].id %>"><%= products[i].quantity %></p>
                    <button id="<%= products[i].id %>" class="btn btn-secondary btn-sm addToCartBtn mx-2 plus"  >+</button>
                    <button id="<%= products[i].id %>" class="btn btn-secondary btn-sm addToCartBtn mx-2 deleteBtn">&#128465;</button>
      
                  </div> 
                </div>
                <br/>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <br>
      
      <script src="/script/cartScript.js"></script>
    </main>
  </body>
</html>
